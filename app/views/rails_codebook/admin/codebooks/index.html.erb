<% title "Codebooks" %>

<div id="add-translation" class="modal hide fade">
  <div class="modal-header">
    <a class="close" data-dismiss="modal">Ã—</a>
    <h3>Translation</h3>
  </div>
  <div class="modal-body">
    <div class="row">
      <%= form_tag admin_codebooks_path, id: 'form-translation', remote: true do %>
        <div class="span1">
          <%= label_tag :locale %>
          <%= text_field_tag :locale, '', class: 'span1', autofocus: true %>
        </div>
        <div class="span4">
          <%= label_tag :key %>
          <%= text_field_tag :key, '', class: 'span4' %>
        </div>
        <div class="span5">
          <%= label_tag :value %>
          <%= text_area_tag :value, '', class: 'span5' %>
        </div>
        <div class="span2">
          <br />
          <%= button_tag "Submit", class: 'btn' %>
        </div>
      <% end %>
    </div>
  </div>
</div>

<div class="left_panel">
  <div class="navbar">
    <div class="navbar-inner">
      <%= form_tag admin_codebooks_path, class: 'navbar-form pull-left', method: :get, id: 'search-form' do %>
        <%= text_field_tag :query, params[:query], hint: 'Search', placeholder: 'Search', autofocus: true %>
        <%= button_tag 'search', class: 'btn' %>
        <%= select_tag :cb_name, options_from_collection_for_select(all_codebooks, "cb_name", "cb_name", params[:cb_name]), include_blank: true %>
      <% end %>

      <div class="clear_button">
        <%= link_to 'clear', admin_codebooks_path, class: 'btn' %>
      </div>

      <div class="new_button">
        <%= link_to 'new', '#', data: { toggle: "modal", target: '#add-translation'}, id: 'add-translation-link', class: 'btn' %>
      </div>

    </div>
  </div>
</div>

<div class="right_panel">
  <div class="apple_pagination">
    <%= will_paginate @codebooks, :container => false %>
  </div>

  <table class="table table-hover" id="codebooks-table">
    <thead>
      <th>#ID</th>
      <th>value</th>
      <th>name</th>
      <th>cb_name</th>
      <th>sequence</th>
      <th>deleted</th>
      <th>created_at</th>
      <th>updated_at</th>
    </thead>
    <tbody>
      <% @codebooks.each do |codebook| %>
        <%= render 'codebook', codebook: codebook %>
      <% end %>
    </tbody>
  </table>


  <div class="apple_pagination">
    <%= will_paginate @codebooks, :container => false %>
  </div>
</div>